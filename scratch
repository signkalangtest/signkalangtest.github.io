const images = document.querySelectorAll('.emote');

        images.forEach((image) => {
        image.addEventListener('click', () => {

            images.forEach((img) => {
            if (img !== image) {
                img.style.display = 'none';
            }

            });
            image.classList.add('active');
        });
        });






